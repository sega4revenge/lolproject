<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clipChildren="false">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fullBlack"
    android:clipChildren="false">
    <TextView
        android:id="@+id/countries_text"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold">



    </TextView>

    <LinearLayout
        android:id="@+id/infoChar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
            android:id="@+id/attack"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:rcBackgroundColor="@color/custom_progress_background"
            app:rcBackgroundPadding="2dp"
            app:rcIconBackgroundColor="@color/custom_progress_blue_header"
            app:rcIconPadding="4dp"
            app:rcIconSize="20dp"
            app:rcIconSrc="@drawable/attack_icon"

            app:rcProgressColor="@color/custom_progress_blue_progress"
            app:rcRadius="30dp"
            >
        </com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar>
        <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
            android:id="@+id/magic"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:rcBackgroundColor="@color/custom_progress_background"
            app:rcBackgroundPadding="2dp"
            app:rcIconBackgroundColor="@color/custom_progress_orange_header"
            app:rcIconPadding="4dp"
            app:rcIconSize="20dp"
            app:rcIconSrc="@drawable/magic_icon"

            app:rcProgressColor="@color/custom_progress_orange_progress"
            app:rcRadius="30dp"
            >
        </com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar>
        <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
            android:id="@+id/defense"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:rcBackgroundColor="@color/custom_progress_background"
            app:rcBackgroundPadding="2dp"
            app:rcIconBackgroundColor="@color/custom_progress_blue_header"
            app:rcIconPadding="4dp"
            app:rcIconSize="20dp"
            app:rcIconSrc="@drawable/defense_icon"

            app:rcProgressColor="@color/custom_progress_blue_progress"
            app:rcRadius="30dp"
            >
        </com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar>
        <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
            android:id="@+id/difficult"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:rcBackgroundColor="@color/custom_progress_background"
            app:rcBackgroundPadding="2dp"
            app:rcIconBackgroundColor="@color/custom_progress_green_header"
            app:rcIconPadding="4dp"
            app:rcIconSize="20dp"
            app:rcIconSrc="@drawable/difficult_icon"

            app:rcProgressColor="@color/custom_progress_green_progress"
            app:rcRadius="30dp"
            >
        </com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="30dp">


        <FrameLayout
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@drawable/temperature_background"
            android:layout_centerVertical="true"
            android:id="@+id/frameLayout">
            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/rp_icon"/>-->
            <TextSwitcher

                android:id="@+id/ts_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

        </FrameLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="@dimen/recycler_view_left_offset"
        android:clipChildren="false"
        android:overScrollMode="never"
        app:layoutManager="com.sega.lolproject.lib.detail.CardSliderLayoutManager"
        app:viewUpdater="com.sega.lolproject.cards.CardsUpdater"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:src="@drawable/star"
            android:scaleType="fitCenter"/>

        <TextSwitcher
            android:id="@+id/ts_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/left_offset"/>

    </FrameLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <!--<ImageSwitcher-->
            <!--android:id="@+id/ts_map"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"/>-->





        <TextSwitcher
            android:id="@+id/ts_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/left_offset"
            android:layout_marginEnd="10dp"/>

        <FrameLayout
            android:id="@+id/num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/ts_description">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp"
                android:src="@drawable/clock"
                android:scaleType="fitCenter"/>

            <TextSwitcher
                android:id="@+id/ts_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/left_offset"/>

        </FrameLayout>

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/youtube_player_view"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_below="@id/num"
            />
    </RelativeLayout>

</LinearLayout>
</android.support.v4.widget.NestedScrollView>
